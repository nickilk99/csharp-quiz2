<Window x:Class="WpfApp1.TreeViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TreeViewForm" Height="450" Width="800">
    <Grid>
        <TreeView Name="trvMenu">
            <TreeViewItem Header="Level 1" Name="tvEven" IsExpanded="True">
                <StackPanel Orientation="Horizontal">
                    <Label>Even:</Label>
                    <TextBlock x:Name="txtEven">0</TextBlock>
                </StackPanel>
            </TreeViewItem>
            <TreeViewItem Header="Level 1"  Name="tvOdd" IsExpanded="True">
                <StackPanel Orientation="Horizontal">
                    <Label>Odd:</Label>
                    <TextBlock x:Name="txtOdd">0</TextBlock>
                </StackPanel>
            </TreeViewItem>
        </TreeView>
        <Button Name="btnClick" Width="100px" Height="20px" Click="Button_Click">Click here</Button>
    </Grid>
</Window>
