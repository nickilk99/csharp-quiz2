<Window x:Class="WpfApp1.TabControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TabControl" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem  Header="1">
                <Grid>
                    <Label FontWeight="Bold" Width="10px">Application Options</Label>
                    <CheckBox Name="CheckBox" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked">Show Tab 2</CheckBox>
                </Grid>
            </TabItem>
            <TabItem Name="Tab2" Header="2">
                <Grid>

                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
